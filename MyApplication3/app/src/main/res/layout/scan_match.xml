<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ticketLayout"
    android:orientation="horizontal"
    android:layout_below="@id/LogoLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:visibility="gone">
    <com.activityrez.fulfillment.CustomText
        android:id="@+id/activityName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Circle Island Tour"
        android:textColor="@color/my_white"
        android:textSize="48px"
        />
    <com.activityrez.fulfillment.CustomText
        android:id="@+id/activityDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Friday October 11, 2013"
        android:textColor="@color/my_white"
        android:textSize="24px"
        android:layout_below="@id/activityName"
        />
    <com.activityrez.fulfillment.CustomText
        android:id="@+id/activityTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="3:41pm"
        android:textColor="@color/my_white"
        android:textSize="32px"
        android:layout_below="@id/activityDate"
        />
    <com.activityrez.fulfillment.CustomText
        android:id="@+id/guestName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ricky Bobby"
        android:textColor="@color/my_white"
        android:textSize="44px"
        android:layout_below="@id/activityTime"
        android:layout_marginTop="10dp" />
    <com.activityrez.fulfillment.CustomButton
        android:id="@+id/allinbutton"
        android:layout_height="50dp"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/nav_button"
        android:text="check in all"
        android:textSize="18dp"
        android:textColor="@color/my_white"
        android:layout_below="@id/guestName"
        android:layout_marginTop="20dp"/>
</RelativeLayout>