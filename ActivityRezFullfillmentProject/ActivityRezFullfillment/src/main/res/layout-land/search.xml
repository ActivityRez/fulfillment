<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/search_wrap"
    android:layout_height="fill_parent"
    android:layout_width="match_parent"
    android:layout_below="@id/LogoLayout"
    android:layout_above="@id/ButtonLayout"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        >
        <com.activityrez.fulfillment.CustomText
            android:id="@+id/name_title"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="name"
            android:textColor="@color/my_white"
            />
        <EditText
            android:id="@+id/name_search"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_below="@id/name_title"
            android:hint="guest name" />
        <com.activityrez.fulfillment.CustomText
            android:id="@+id/phone_title"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="phone"
            android:textColor="@color/my_white"
            android:layout_below="@id/name_search"
            />
        <EditText
            android:id="@+id/phone_search"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_below="@id/phone_title"
            android:hint="phone number" />
        <com.activityrez.fulfillment.CustomText
            android:id="@+id/email_search_title"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="email"
            android:textColor="@color/my_white"
            android:layout_below="@id/phone_search"
            />
        <EditText
            android:id="@+id/email_search"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_below="@id/email_search_title"
            android:hint="email" />
        <com.activityrez.fulfillment.CustomText
            android:id="@+id/credit_title"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="credit card"
            android:layout_below="@id/email_search"
            android:textColor="@color/my_white"
            android:visibility="invisible"
            />
        <EditText
            android:id="@+id/credit_search"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="last 4 digits of credit card"
            android:textSize="18px"
            android:layout_below="@id/credit_title"
            android:visibility="invisible"
            />
        <com.activityrez.fulfillment.CustomText
            android:id="@+id/sale_id_title"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_below="@id/email_search"
            android:text="sale ID"
            android:textColor="@color/my_white"
            />
        <EditText
            android:id="@+id/sale_id_search"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="sale id"
            android:layout_below="@id/sale_id_title" />
    </RelativeLayout>
</ScrollView>